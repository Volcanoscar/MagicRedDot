<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="QQRedDotView">
        <!-- 拖动点半径-->
        <attr name="dragDotRadius" format="dimension" />
        <!-- 锚点半径-->
        <attr name="anchorDotRadius" format="dimension" />
        <!-- 拖动点颜色-->
        <attr name="dotColor" format="color" />
        <!-- 字体颜色-->
        <attr name="textColor" format="color" />
        <!-- 字体大小-->
        <attr name="textSize" format="dimension" />
        <!-- 红点的类别-->
        <attr name="dotStyle" format="enum" >
            <!-- 实心红点,不带消息数,不可拖动-->
            <enum name="solid" value="0" />
            <!-- 带消息数,可拖动-->
            <enum name="dragable" value="1" />
            <!-- 带消息数,不可拖动-->
            <enum name="undragable" value="2" />
        </attr>
        <!-- 可拖动的距离-->
        <attr name="dragDistance" format="dimension" />
    </declare-styleable>
</resources>
